<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', { page: 'Photos' }) %> 

<body>
    
    <%- include('../partials/main_nav.ejs') %>
    
    <div class="main-container" id="photo-container"> 
        <% for(let idx=0; idx < comments.length; idx++){ %>
            <% const comment=comments[idx] %> 
                <div class="comment-index-card">

                    <a href="/photos/<%= comment.photoId %>">    
                        <div class="solo-comment-username"><%= comment.username %></div> 
                    </a>
                    
                    <div class="solo-comment-timestamp"><%= new Date(comment.createdAt).toLocaleString() %></div> 
                    <div class="solo-comment-text"><%= comment.comment %> </div> 

                    <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                        <button type="text" id="delete_comment">Delete</button>
                    </form>

                </div>

        <% } %> 
    </div>

    <%- include('../partials/footer.ejs') %>

</body>
</html>