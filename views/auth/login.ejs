<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', { page: 'New Photo' }) %> 

<body>
    
    <nav class="nav">
        <div class="col-30">
            <a id="icon-background" href="/login"><i class="fas fa-camera-retro fa-3x"></i></a>
        </div>
        <div class="col-70">
            <li id="dropdown">
                <a onclick="toggleDrop()" class="dropbtn">Account</a>
                <div id="myDropdown" class="dropdown-content">
                    <a href="../register">New User</a>
                </div>
            </li>
            <li><a href="/login">Login</a></li> 
        </div>
    </nav> 
    
    <div class="home-container">
        
        <div class="login-container">
            
            <h1 class="home-title">PikChu</h1>
            
            <form action="/login" method="POST">
                <div class="login-card">        
                    <label class="form-label">Email: </label><br>
                    <input name="email" class="form-input" type="email" placeholder="youremail@here.com">
                </div>

                <div class="login-card">
                    <label class="form-label">Password: </label><br>
                    <input name="password" class="form-input" type="password" placeholder="********">
                </div>
                
                <div id="center-login">
                    <button type="submit" class="submit home">Sign in</button>
                </div>
                
            </form>
            
            <p class="home-sub-title">Don't have an account yet?</p>
            
            <a href="/register"><button type="submit" class="submit">Create Account</button></a>
            
        </div>

    </div>

    <%- include('../partials/footer.ejs') %>

</body>
</html>